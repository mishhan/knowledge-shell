<div class="frame-editor__game-panel">
  <div class="game-panel">
    {{#each this.panelObjects as |panelObject|}}
    <div class="game-panel__element">
      <DraggableObject @overrideClass="game-panel__element-avatar" @content={{panelObject}}>
        {{#let (get-frame-slot-value panelObject "Picture") as |panelObjectPicture|}}
        <img src="/assets/warrior.svg" alt={{panelObject.name}} width="100" height="100">
        {{/let}}
      </DraggableObject>
      <div class="game-panel__element-info">
        <div class="game-panel__element-attr">
          <span class="game-panel__element-attr-text">{{panelObject.name}}</span>
        </div>
        <div class="game-panel__element-attr">
          <span class="game-panel__element-attr-text">Attributes</span>
        </div>
        <div class="game-panel__element-attr">
          <span class="game-panel__element-attr-text">{{panelObject.slotNames}}</span>
        </div>
      </div>
    </div>
    {{/each}}
    <div class="game-panel__service-panel">
      <button type="button" {{on 'click' this.playStep}}>
        <FaIcon @icon="play" />
      </button>
    </div>
  </div>
  <div class="game-field">
    {{!-- template-lint-disable  --}}
    <div class="game-field__field" style={{this.fieldStyle}}>
      {{#each this.battleField.sortedSlots as |slot|}}
      <DraggableObjectTarget @overrideClass='game-field__cell' @action={{this.addMoveObjectOnField}}
        @slotName={{slot.name}}>
        {{#let (get-slot-value slot "Picture") as |slotPicture|}}
        {{#if (not (is-empty slotPicture))}}
        <DraggableObject @content={{slot}} @overrideClass='game-field__cell-draggable'>
          <img class="game-field__cell-image" src="/assets/warrior.svg" alt="Hero" width="100" height="100">
        </DraggableObject>
        {{else}}
        <img class="game-field__cell-image" src="/assets/grass.svg" alt="Grass" width="100" height="100">
        {{/if}}
        {{/let}}
      </DraggableObjectTarget>
      {{/each}}
    </div>
  </div>
</div>
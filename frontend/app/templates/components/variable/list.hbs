<div class="table-container">
	<table class="table variable-table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
		<thead>
			<tr>
				<th class="variable-table__index-column has-text-centered">#</th>
				<th class="variable-table__name-column">{{t "variable.fields.name"}}</th>
				<th class="variable-table__description-column">{{t "variable.fields.description"}}</th>
				<th class="variable-table__domain-column">{{t "variable.fields.domain"}}</th>
				<th class="variable-table__type-column">{{t "variable.fields.variable_type"}}</th>
				<th class="variable-table__question-column">{{t "variable.fields.question"}}</th>
				<th class="variable-table__actions-column has-text-centered">{{t "common.actions"}}</th>
			</tr>
			<tr>
				<th class="variable-table__index-column has-text-centered"></th>
				<th class="variable-table__name-column">
					<div class="control has-icons-right">
						<Input placeholder={{t "common.filter"}} class="input is-small" @type="text" @value={{this.filter}} />
						<span class="icon is-right">
							<FaIcon @icon="search" />
						</span>
					</div>
				</th>
				<th class="variable-table__description-column"></th>
				<th class="variable-table__domain-column"></th>
				<th class="variable-table__type-column"></th>
				<th class="variable-table__question-column"></th>
				<th class="variable-table__actions-column has-text-centered">
					<LinkTo @route="app.production-base.variables.new" class="button is-primary is-small">
						<FaIcon @icon="plus-square" />
					</LinkTo>
				</th>
			</tr>
		</thead>
		<tbody>
			<Provider::Filter @model={{@variables}} @field="name" @query={{this.filter}} as |filteredVariables|>
				{{#each filteredVariables as |variable|}}
					<tr>
						<td class="variable-table__index-column has-text-centered">{{variable.name}}</td>
						<td class="variable-table__description-column">{{variable.description}}</td>
						<td class="variable-table__name-column">{{variable.domain.name}}</td>
						<td class="variable-table__domain-column">{{variable.description}}</td>
						<td class="variable-table__type-column">{{variable.variableTypeName}}</td>
						<td class="variable-table__actions-column has-text-centered">
							<LinkTo @route="app.production-base.variables.edit" @model={{variable.id}} class="button is-warning is-small">
								<FaIcon @icon="edit" />
							</LinkTo>
							<button type="button" class="button is-danger is-small" {{on "click" (fn @deleteVariable variable)}}>
								<FaIcon @icon="trash" />
							</button>
						</td>
					</tr>
				{{/each}}
			</Provider::Filter>
		</tbody>
	</table>
</div>
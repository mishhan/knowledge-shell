	<ul class="base-editor__navbar">
		<li class="base-editor__navbar-link-container">
			<LinkTo @route="app.production-base.rules" class="base-editor__navbar-link">
				<FaIcon @icon="clipboard" />
				<span class="base-editor__navbar-link-text">
					{{t "production_editor.rules"}}
				</span>
			</LinkTo>
		</li>
		<li class="base-editor__navbar-link-container">
			<LinkTo @route="app.production-base.variables" class="base-editor__navbar-link">
				<FaIcon @icon="th-list" />
				<span class="base-editor__navbar-link-text">
					{{t "production_editor.variables"}}
				</span>
			</LinkTo>
		</li>
		<li class="base-editor__navbar-link-container">
			<LinkTo @route="app.production-base.domains" class="base-editor__navbar-link">
				<FaIcon @icon="th-list" />
				<span class="base-editor__navbar-link-text">
					{{t "production_editor.domains"}}
				</span>
			</LinkTo>
		</li>

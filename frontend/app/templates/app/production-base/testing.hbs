<div class="container is-fluid">
	<div class="box">
		<div class="field">
			<label for="type" class="label">
				{{t "pages.production_editor.testing.goal"}}
			</label>
			<div class="control">
				<PowerSelect
					@options={{this.variables}}
					@allowClear={{false}}
					@selected={{this.goalVariable}}
					@onChange={{this.setGoalVariable}} as |variable|
				>
					{{variable.name}}
				</PowerSelect>
			</div>
		</div>
		<div class="field">
			<button type="button" class="button is-primary" disabled={{not this.hasGoalVariable}} {{on "click" this.start}}>
				{{t "pages.production_editor.testing.start"}}
			</button>
		</div>
		{{#if this.currentVariable}}
			<div class="field">
				<label for="type" class="label">
					{{this.currentVariable.question}}
				</label>
				<div class="control">
					<PowerSelect
						@options={{this.currentVariable.domain.domainValues}}
						@allowClear={{false}}
						@selected={{this.currentVariable.value}}
						@onChange={{fn this.setVariableValue this.currentVariable}} as |domainValue|
					>
						{{domainValue.value}}
					</PowerSelect>
				</div>
			</div>
			<div class="field">
				<button type="button" class="button is-primary" {{on "click" this.calculateCurrentState}}>
					{{t "pages.production_editor.testing.answer"}}
				</button>
				<button type="button" class="button is-danger" {{on "click" this.getPreviousState}}>
					{{t "pages.production_editor.testing.back"}}
				</button>
			</div>
		{{/if}}
		<Card @header={{t "pages.production_editor.testing.working_memory"}}>
			{{#each this.variables as |variable|}}
				<div class="field is-grouped">
					<div class="control">
						<input type="text" class="input is-info is-small" readonly value={{variable.name}} />
					</div>
					<div class="control is-expanded">
						<PowerSelect
							@triggerClass="input is-info is-small mt-0"
							@options={{variable.domain.domainValues}}
							@allowClear={{true}}
							@selected={{variable.value}}
							@onChange={{fn this.setVariableValue variable}} as |domainValue|
						>
							{{domainValue.value}}
						</PowerSelect>
					</div>
				</div>
			{{/each}}
		</Card>
		<Card @header={{t "pages.production_editor.testing.explanation"}}>
			{{#each this.usedRules as |rule|}}
				<p>
					<pre>
						{{rule.name}}
					</pre>
					&nbsp;
					<pre>
						{{rule.fullRule}}
					</pre>
					&nbsp;{{rule.reason}}
				</p>
			{{/each}}
		</Card>
	</div>
</div>